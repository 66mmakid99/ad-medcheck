{
  "name": "medcheck-engine",
  "version": "1.0.0",
  "type": "module",
  "description": "의료광고위반 분석 엔진",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --format=esm --platform=neutral --outfile=dist/index.js --external:__STATIC_CONTENT_MANIFEST",
    "start": "node dist/index.js",
    "dev": "wrangler dev",
    "dev:local": "wrangler dev --local",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:prod": "wrangler deploy --env production",
    "d1:init": "wrangler d1 execute medcheck-db --local --file=src/db/schema.d1.sql",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "medical",
    "advertisement",
    "compliance",
    "korea"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260129.0",
    "@types/node": "^25.1.0",
    "esbuild": "^0.27.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "wrangler": "^4.61.1"
  },
  "dependencies": {
    "hono": "^4.11.7"
  }
}
